<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.almaunion.raiffstat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ru.almaunion.raiffstat.MainRaiffStat"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="ru.almaunion.raiffstat.ReportListAll"
              android:label="@string/report_name"
              android:screenOrientation="portrait">
        </activity>
        
        <activity android:name="ru.almaunion.raiffstat.PlacesList"
              android:label="@string/places_name"
              android:screenOrientation="portrait">
        </activity>
        
        <receiver android:name="ru.almaunion.raiffstat.SMSReceiver" android:enabled="true">
	      <intent-filter>
	        <action android:name="android.provider.Telephony.SMS_RECEIVED" />
	      </intent-filter>
    	</receiver>
        
        <activity android:name="ru.almaunion.raiffstat.CategoryList" 
              android:label="@string/exp_categories"
              android:screenOrientation="portrait">
        </activity>
        
    	<activity android:name="ru.almaunion.raiffstat.ReportTabs"   
              android:label="@string/report_name"
              android:screenOrientation="portrait">
        </activity>
        
    	<activity android:name="ru.almaunion.raiffstat.ReportSummary" 
              android:label="@string/report_name"
              android:screenOrientation="portrait">
        </activity>
        
    	<activity android:name="ru.almaunion.raiffstat.donationui.ui.StartUpActivity"
      			android:label="@string/str_donation"
      			android:screenOrientation="portrait">
      	</activity>
      	
    	<activity android:name="ru.almaunion.raiffstat.donationui.ui.MainDonationActivity" 
      			android:label="@string/str_donation"
      			android:screenOrientation="portrait">
      	</activity>
    	
    	<activity android:name="ru.almaunion.raiffstat.donationui.ui.PurchaseDonationActivity"
      			android:label="@string/str_donation"
      			android:screenOrientation="portrait">
      	</activity>
      	
        
    </application>

</manifest>